<h2>Goals</h2>
<%= button_to "New goal", new_goal_url %>
<hr>

<ul>
  <% @goals.each do |goal| %>
    <li>
      <% if goal.exposure == "Public" || goal.user_id == current_user.id %>
        <%= goal.content %>
        <%= goal.user.username %>
        <%= goal.status %>
        <%  if goal.user_id == current_user.id %>
          <%= button_to "Edit", edit_goal_url(goal), method: :get %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
<br>
